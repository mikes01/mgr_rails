<% className = (line.persisted? ? 'edit' : 'new') %> 

<%= simple_form_for(line, html: { id: "line_remote_form", class: 'form-horizontal ' + className, data: { remote: "true" } }) do |f| %>
  <%= f.input :name %>
  <%= f.input :coordinates, as: :text %>
  <%= f.input :road_type, as: :select, collection: Line::ROAD_TYPES.keys, include_blank: false %>
  <%= f.button :submit %>
  <% if line.persisted? %>
    <%= link_to 'Delete', line_path(line), class: 'btn btn-danger',
      confirm: 'Are you sure?', method: :delete, remote: true %>
  <% end %>
<% end %>
