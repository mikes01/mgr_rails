<% className = (place.persisted? ? 'edit' : 'new') %> 

<%= simple_form_for(place, html: { id: "place_remote_form", class: 'form-horizontal ' + className, data: { remote: "true" } }) do |f| %>
  <%= f.input :name %>
  <%= f.input :coordinates, as: :text %>
  <%= f.input :object_type, as: :select, collection: Place::OBJECT_TYPES, include_blank: false %>
  <%= f.input :object_class, as: :select, collection: Place::OBJECT_CLASSES, include_blank: false %>
  <%= f.input :terc %>
  <%= f.input :voivodeship %>
  <%= f.input :county %>
  <%= f.input :commune %>
  <%= f.button :submit %>
  <% if place.persisted? %>
    <%= link_to 'Delete', place_path(place), class: 'btn btn-danger',
      confirm: 'Are you sure?', method: :delete, remote: true %>
  <% end %>
<% end %>
